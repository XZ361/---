/* pages/cal/cal.wxss */
Page{
  height: 100%;
}
.section{
  height: 100%;
  padding-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-image: url("data:image/png;base64,");
  background-repeat: repeat;
}
.screen{
  /*计算结果的显示区域  */
  background-color: #FFFFFF;
  border-radius: 3px; 
  text-align: right;
  width: 720rpx;
  height: 100rpx;
  padding-right:10rpx;
  /* margin-top: 20rpx; */
  margin-bottom: 30rpx;
}
.btnGroup{
  display: flex;
  direction: row;
}
.item{
  width: 160rpx;
  min-height: 150rpx;
  margin: 10rpx;
  /*文字的阴影面积  */
  text-shadow: 0 1px 1px rgba(0, 0, 0, .3);
  border-radius: 5px;
  text-align: center;
  line-height: 150rpx;
}
.orange{
  color: #fef4e9;
  border: solid 1px #da7c0c;
  background-color: #f78d1d;
}
.blue{
  color: #d9eef7;
  background-color: #0095cd;
  border: solid 1px #0076a3;
}